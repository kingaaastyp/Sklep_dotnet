@model Sklep.Models.Produkt

@{
    ViewData["Title"] = "Usuń Produkt";
}

<h1>Usuń Produkt</h1>

<h3>Czy na pewno chcesz usunąć ten produkt?</h3>

<div>
    <h4>Produkt</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
